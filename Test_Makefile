CXXFLAGS=-std=c++11
SOURCES=init.cpp driver.cpp func.cpp check.cpp hash.cpp
HEADERS=init.h
EXECUTABLE=out

clean:
	/bin/rm $(EXECUTABLE)

icc_no_opt:
	icc $(CXXFLAGS) -O0 -vec-threshold0 -restrict -o $(EXECUTABLE) $(SOURCES)

icc_opt: $(EXECUTABLE)
	icc $(CXXFLAGS) -O3 -vec-threshold0 -restrict -o $(EXECUTABLE) $(SOURCES)

clang_no_opt:
	clang++ $(CXXFLAGS) -O0 -fslp-vectorize-aggressive -o $(EXECUTABLE) $(SOURCES)

clang_opt:
	clang++ $(CXXFLAGS) -O3 -fslp-vectorize-aggressive -o $(EXECUTABLE) $(SOURCES)

ubsan:
	clang++ $(CXXFLAGS) -O0 -fsanitize=undefined -o $(EXECUTABLE) $(SOURCES)

icc_knl_no_opt:
	icc $(CXXFLAGS) -O0 -vec-threshold0 -restrict -xMIC-AVX512 -o $(EXECUTABLE) $(SOURCES)

icc_knl_opt:
	icc $(CXXFLAGS) -O3 -vec-threshold0 -restrict -xMIC-AVX512 -o $(EXECUTABLE) $(SOURCES)

clang_knl_no_opt:
	clang++ $(CXXFLAGS) -O0 -fslp-vectorize-aggressive -march=knl -o $(EXECUTABLE) $(SOURCES)

clang_knl_opt:
	clang++ $(CXXFLAGS) -O3 -fslp-vectorize-aggressive -march=knl -o $(EXECUTABLE) $(SOURCES)
