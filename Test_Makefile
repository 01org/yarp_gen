CXXFLAGS=-std=c++11
LDFLAGS=-std=c++11 -static-libgcc -static-libstdc++
SOURCES=init.cpp driver.cpp func.cpp check.cpp hash.cpp
EXECUTABLE=out
COMPILER=
OPTFLAGS=

all: icc gcc clang clang_san

icc: EXECUTABLE=$@
icc: icc_no_opt icc_opt icc_knl_no_opt icc_knl_opt

gcc: EXECUTABLE=$@
gcc: gcc_no_opt gcc_wsm_opt gcc_ivb_opt gcc_bdw_opt gcc_knl_no_opt gcc_knl_opt gcc_skx_opt

clang: EXECUTABLE=$@
clang: clang_no_opt clang_opt clang_knl_no_opt clang_knl_opt

clang_san: EXECUTABLE=$@
clang_san: ubsan


doall: doicc dogcc doclang doclang_san

doicc: EXECUTABLE=$@
doicc: do_icc_no_opt do_icc_opt do_icc_knl_no_opt do_icc_knl_opt

dogcc: EXECUTABLE=$@
dogcc: do_gcc_no_opt do_gcc_wsm_opt do_gcc_ivb_opt do_gcc_bdw_opt do_gcc_knl_no_opt do_gcc_knl_opt do_gcc_skx_opt

doclang: EXECUTABLE=$@
doclang: do_clang_no_opt do_clang_opt do_clang_knl_no_opt do_clang_knl_opt

doclang_san: EXECUTABLE=$@
doclang_san: do_ubsan


clean: clean_icc clean_gcc clean_clang clean_clang_san
	/bin/rm -rf $(EXECUTABLE)
	/bin/rm -rf *.o

clean_icc:
	/bin/rm -rf icc_no_opt icc_opt icc_knl_no_opt icc_knl_opt	    

clean_gcc:
	/bin/rm -rf gcc_no_opt gcc_wsm_opt gcc_ivb_opt gcc_bdw_opt gcc_knl_no_opt gcc_knl_opt gcc_skx_opt

clean_clang:
	/bin/rm -rf clang_no_opt clang_opt clang_knl_no_opt clang_knl_opt

clean_clang_san:
	/bin/rm -rf ubsan


icc_no_opt: COMPILER=icc
icc_no_opt: OPTFLAGS=-O0 -vec-threshold0 -restrict
icc_no_opt: $(addprefix icc_no_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(LDFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

icc_opt: COMPILER=icc
icc_opt: OPTFLAGS=-O3 -vec-threshold0 -restrict
icc_opt: $(addprefix icc_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(LDFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

gcc_no_opt: COMPILER=g++
gcc_no_opt: OPTFLAGS=-O0 -march=nehalem
gcc_no_opt: $(addprefix gcc_no_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(LDFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

gcc_wsm_opt: COMPILER=g++
gcc_wsm_opt: OPTFLAGS=-Ofast -march=westmere
gcc_wsm_opt: $(addprefix gcc_wsm_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(LDFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

gcc_ivb_opt: COMPILER=g++
gcc_ivb_opt: OPTFLAGS=-Ofast -march=ivybridge
gcc_ivb_opt: $(addprefix gcc_ivb_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(LDFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

gcc_bdw_opt: COMPILER=g++
gcc_bdw_opt: OPTFLAGS=-Ofast -march=broadwell
gcc_bdw_opt: $(addprefix gcc_bdw_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(LDFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

clang_no_opt: COMPILER=clang++
clang_no_opt: OPTFLAGS=-O0 -fslp-vectorize-aggressive
clang_no_opt: $(addprefix clang_no_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(CXXFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

clang_opt: COMPILER=clang++
clang_opt: OPTFLAGS=-O3 -fslp-vectorize-aggressive
clang_opt: $(addprefix clang_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(CXXFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

ubsan: COMPILER=clang++
ubsan: OPTFLAGS=-O0 -fsanitize=undefined
ubsan: $(addprefix ubsan_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(CXXFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

icc_knl_no_opt: COMPILER=icc
icc_knl_no_opt: OPTFLAGS=-O0 -vec-threshold0 -restrict -xMIC-AVX512
icc_knl_no_opt: $(addprefix icc_knl_no_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(LDFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

icc_knl_opt: COMPILER=icc
icc_knl_opt: OPTFLAGS=-O3 -vec-threshold0 -restrict -xMIC-AVX512
icc_knl_opt: $(addprefix icc_knl_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(LDFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

clang_knl_no_opt: COMPILER=clang++
clang_knl_no_opt: OPTFLAGS=-O0 -fslp-vectorize-aggressive -march=knl
clang_knl_no_opt: $(addprefix clang_knl_no_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(CXXFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

clang_knl_opt: COMPILER=clang++
clang_knl_opt: OPTFLAGS=-O3 -fslp-vectorize-aggressive -march=knl
clang_knl_opt: $(addprefix clang_knl_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(CXXFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

gcc_knl_no_opt: COMPILER=g++
gcc_knl_no_opt: OPTFLAGS=-O0 -march=knl
gcc_knl_no_opt: $(addprefix gcc_knl_no_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(LDFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

gcc_knl_opt: COMPILER=g++
gcc_knl_opt: OPTFLAGS=-Ofast -march=knl
gcc_knl_opt: $(addprefix gcc_knl_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(LDFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^

gcc_skx_opt: COMPILER=g++
gcc_skx_opt: OPTFLAGS=-Ofast -march=skylake-avx512
gcc_skx_opt: $(addprefix gcc_skx_opt_, $(SOURCES:.cpp=.o))
	$(COMPILER) $(LDFLAGS) $(OPTFLAGS) -o $(EXECUTABLE) $^



%init.o: init.cpp
	$(COMPILER) $(CXXFLAGS) $(OPTFLAGS) -o $@ -c $<
%driver.o: driver.cpp
	$(COMPILER) $(CXXFLAGS) $(OPTFLAGS) -o $@ -c $<
%func.o: func.cpp
	$(COMPILER) $(CXXFLAGS) $(OPTFLAGS) -o $@ -c $<
%check.o: check.cpp
	$(COMPILER) $(CXXFLAGS) $(OPTFLAGS) -o $@ -c $<
%hash.o: hash.cpp
	$(COMPILER) $(CXXFLAGS) $(OPTFLAGS) -o $@ -c $<


do_icc_no_opt: icc_no_opt
	./$< v

do_icc_opt: icc_opt
	./$< v

do_gcc_no_opt: gcc_no_opt
	./$< v

do_gcc_wsm_opt: gcc_wsm_opt
	sde -wsm -- $< v

do_gcc_ivb_opt: gcc_ivb_opt
	sde -ivb -- $< v

do_gcc_bdw_opt: gcc_bdw_opt
	sde -bdw -- $< v

do_clang_no_opt: clang_no_opt
	./$< v

do_clang_opt: clang_opt
	./$< v

do_ubsan: ubsan
	./$< v

do_icc_knl_no_opt: icc_knl_no_opt
	sde -knl -- $< v

do_icc_knl_opt: icc_knl_opt
	sde -knl -- $< v

do_clang_knl_no_opt: clang_knl_no_opt
	sde -knl -- $< v

do_clang_knl_opt: clang_knl_opt
	sde -knl -- $< v

do_gcc_knl_no_opt: gcc_knl_no_opt
	sde -knl -- $< v

do_gcc_knl_opt: gcc_knl_opt
	sde -knl -- $< v

do_gcc_skx_opt: gcc_skx_opt
	sde -skx -- $< v

